pipeline
{
    
    stages
    {
        stage('ContDownload')
        {
            steps
            {
                git 'https://github.com/MuraliKarre/maven.git'
            }
        }
        stage('ContBuild')
        {
            steps
            {
                sh 'mvn clean package'
            }
        }
        stage('ContDeployment')
        {
            steps
            {
                sh 'scp /var/lib/jenkins/workspace/Declarative_Pipeline/webapp/target/webapp.war ubuntu@13.233.93.49:/opt/tomcat/webapps/qaenv.war'
            }
        }
        stage('ContTesting')
        {
            steps
            {
                git 'https://github.com/MuraliKarre/TestingOnLinux.git'
                sh 'java -jar  /var/lib/jenkins/workspace/Declarative_Pipeline/testing.jar'
            }
        }
    
            stage('ContDelivary')
        {
            steps
            {
                sh 'scp /var/lib/jenkins/workspace/Declarative_Pipeline/webapp/target/webapp.war vagrant@10.10.10.32:/var/lib/tomcat7/webapps/qaenv.war'
            }
        }
 
        
     }
      
    
}
